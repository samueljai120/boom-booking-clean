# Production Environment Variables for Vercel + Neon Deployment
# Copy this to .env.production and update with your actual values

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:port/database?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-production-change-this-now
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Stripe Configuration (Production)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# CORS Configuration
CORS_ORIGIN=https://your-domain.vercel.app,https://www.your-domain.com

# Application Configuration
NODE_ENV=production
VITE_APP_NAME=Boom Karaoke Booking
VITE_APP_VERSION=1.0.0

# Frontend Configuration (Vercel will set these automatically)
VITE_API_BASE_URL=/api
VITE_WS_URL=

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
